<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/text_Weight"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="35sp"
        android:textColor="@android:color/black"
        android:gravity="center_vertical|right"
        android:paddingRight="60dp"
        android:ems="10"
        android:text="0.0"/>

    <CheckBox
        android:id="@+id/box_Tare"
        android:layout_below="@+id/text_Weight"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:button="@null"
        android:gravity="center"
        android:drawableTop="@drawable/state_selector"
        android:text="去皮"/>

    <CheckBox
        android:id="@+id/box_Stable"
        android:layout_below="@+id/text_Weight"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/box_Tare"
        android:layout_marginLeft="20dp"
        android:button="@null"
        android:gravity="center"
        android:drawableTop="@drawable/state_selector"
        android:text="去皮"/>

    <CheckBox
        android:id="@+id/box_Zero"
        android:layout_below="@+id/text_Weight"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/box_Stable"
        android:layout_marginLeft="20dp"
        android:button="@null"
        android:gravity="center"
        android:drawableTop="@drawable/state_selector"
        android:text="去皮"/>

    <Button
        android:id="@+id/btn_Tare"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/text_Weight"
        android:layout_toRightOf="@+id/box_Zero"
        android:layout_marginLeft="50dp"
        android:text="去皮" />

    <Button
        android:id="@+id/btn_Zero"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/text_Weight"
        android:layout_toRightOf="@+id/btn_Tare"
        android:layout_marginLeft="10dp"
        android:text="置零" />

    <Button
        android:id="@+id/btn_Edit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/text_Weight"
        android:layout_marginLeft="30dp"
        android:layout_centerVertical="true"
        android:text="修改" />

</RelativeLayout>